<UserControl x:Class="PicEditor.View.PictureControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PicEditor.View"
             mc:Ignorable="d" 
             Name="pictureControl"
             Height="Auto" Width="Auto"
             MinHeight="100" MinWidth="100">
    <Grid>
        <Rectangle 
            Fill="#FF252525"
            Opacity="{Binding BackgroundOpacity, ElementName=pictureControl}" 
            MouseLeftButtonDown="Grid_MouseLeftButtonDown"/>
        <Image 
            Source="{Binding ImageSource, ElementName=pictureControl}"
            HorizontalAlignment="Center" 
            Height="{Binding ImageHeight, ElementName=pictureControl}" 
            Width="{Binding ImageWidth, ElementName=pictureControl}"
            Margin="0,0,0,0"
            VerticalAlignment="Center" />
    </Grid>
</UserControl>
